<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" 
  "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
  <!-- 指定全局国际化资源文件 -->
  <constant name="struts.custom.i18n.resources" value="mess" />
  <constant name="struts.enable.DynamicMethodInvocation" value="false" />
  <constant name="struts.devMode" value="true" />
  <constant name="struts.action.excludePattern" value="/static/.*?" />

  <package name="default" namespace="/" extends="struts-default">
    <action name="index" class="org.cloud.struts2Demo.action.IndexAction" method="index">
      <result name="success">/WEB-INF/views/index.jsp</result>
    </action>
    <action name="login" class="org.cloud.struts2Demo.action.LoginAction">
      <result name="error">/WEB-INF/views/login/error.jsp</result>
      <result name="success">/WEB-INF/views/login/welcome.jsp</result>
    </action>
    <action name="loginPage">
      <result>/WEB-INF/views/login/loginPage.jsp</result>
    </action>
    <action name="restStudent">
      <result>/WEB-INF/views/student.jsp</result>
    </action>
  </package>
  
  <package name="student" namespace="/student" extends="struts-default">
    <action name="*" class="org.cloud.struts2Demo.action.StudentAction" method="{1}">
      <result name="list" >/WEB-INF/views/student/studentList.jsp</result>
      <result name="save" type="redirect">list</result>
      <result name="delete" type="redirect">list</result>
      <result name="update">/WEB-INF/views/student/update.jsp</result>
      <result name="add">/WEB-INF/views/student/add.jsp</result>
      <allowed-methods>list,save,preSave,delete</allowed-methods>
    </action>
  </package>
  
  <!-- class属性的值对应beans.xml中注入的Action的id名 -->
  <package name="student_json" namespace="/rest/student" extends="json-default">
    <action name="*" class="org.cloud.struts2Demo.action.StudentRestAction" method="{1}">
      <result name="success" type="json">
        <param name="root">result</param>
      </result>
      <allowed-methods>listStudent,deleteStudent,addStudent</allowed-methods>
    </action>
  </package>
  
</struts>